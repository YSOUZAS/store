@model Store.Business.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Edit" + Model.Name;
}

<h4>@ViewData["Title"] </h4>
<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea cols="40" rows="5" asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Supplier.Name" class="control-label"></label>
                <input asp-for="Supplier.Name" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label>Actual Image</label>
                <img src="~/images/@Model.Image" alt="@Model.Image" style="width:70px; height:100px">
            </div>
            <div class="form-group">
                <label asp-for="UploadImage" class="control-label">Image</label>
                <div class="custom-file">
                    <input type="file" id="UploadImage" asp-for="UploadImage" class="custom-file-input" />
                    <label data-brose="Search" style="width:400px" class="custom-file-label" for="UploadImage"></label>
                    <label style="display:none" id="img_name"></label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Active" /> @Html.DisplayNameFor(model => model.Active)
                </label>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");

        <script>
            $("#UploadImage").change(function () {
                $("#img_name").text(this.files[0].name);
                $("#img_name")[0].style.display = "block";
            });
        </script>
    }
}
